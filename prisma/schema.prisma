datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model Product {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  images      String[]
  price       Int       @default(0)
  discount    Float     
  stock       Int       @default(0)

  categoryId  Int
  category    Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}

model Category {
  id         Int       @id @default(autoincrement())
  title      String
  image      String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  typeId     Int       
  type       Type      @relation(fields: [typeId], references: [id], onDelete: Cascade)

  products   Product[] 
}

model Type {
  id         Int       @id @default(autoincrement())
  title      String
  image      String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  categories Category[]
}
