model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model Product {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  images      String[]
  price       Int       @default(0)
  discount    Float     // Use Float for percentage/decimal values
  stock       Int       @default(0)

  categoryId  Int
  category    Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade) // Cascade delete on category
}

model Category {
  id         Int       @id @default(autoincrement())
  title      String
  image      String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  typeId     Int       // Foreign key referencing Type
  type       Type      @relation(fields: [typeId], references: [id], onDelete: Cascade) // Cascade delete on type

  products   Product[] // One-to-many relation with Product
}

model Type {
  id         Int       @id @default(autoincrement())
  title      String
  image      String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  categories Category[] // One-to-many relation with Category
}
